<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="https://logging.apache.org/xml/ns"
               xsi:schemaLocation="
                       https://logging.apache.org/xml/ns
                       https://logging.apache.org/xml/ns/log4j-config-2.xsd">

    <Appenders>
        <Console name="CONSOLE">
            <PatternLayout pattern="[%d{HH:mm:ss.SSS} %highlight{%-5level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=bright_cyan, DEBUG=bright_green, TRACE=magenta}] %m%n"/>
        </Console>
        <RollingFile name="FILE" fileName="logs/latest.log" filePattern="logs/%d{yyyy-MM-dd}-%i.log">
            <DefaultRolloverStrategy fileIndex="nomax" />
            <PatternLayout pattern="[%d{HH:mm:ss.SSS} %-5level] %m%n" />
            <Policies>
                <OnStartupTriggeringPolicy />
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <SizeBasedTriggeringPolicy size="1MB" />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="dev.blackilykat" level="DEBUG"/>
        <Root level="DEBUG">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="FILE"/>
        </Root>
    </Loggers>

</Configuration>